# include <bomberman.h>

static int		ft_intlen(int nb)
{
	int		ret;

	ret = 1;
	if (nb < 0)
		nb = -nb;
	while (nb > 9)
	{
		nb = nb / 10;
		ret++;
	}
	return (ret);
}

char		*itoa(int n)
{
	size_t	length;
	char	*a;

	if (n == -2147483648)
		return (strdup("-2147483648"));
	length = ft_intlen(n);
	if ((a = (char *)malloc(sizeof(char) * (length + 1 + ((n < 0) ? 1 : 0)))) == NULL)
		return (NULL);
	if (n < 0)
	{
		a[0] = '-';
		n = -n;
	}
	else
		length--;
	while (n > 9)
	{
		a[length--] = '0' + n % 10;
		n = n / 10;
	}
	if (n >= 0)
	{
		a[length] = '0' + n;
	}
	return (a);
}
